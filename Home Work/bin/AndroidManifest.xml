<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.wachid.homework"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.wachid.homework.MainActivity"
            android:theme="@style/Theme.AppCompat.Light.DarkActionBar"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
         <activity
            android:name="com.wachid.homework.AboutActivity"
            android:theme="@style/Theme.AppCompat.Light.DarkActionBar"
            android:label="@string/activity_about"
            android:parentActivityName="com.wachid.homework.MainActivity" >
           
        </activity>
        
          <activity
            android:name="com.wachid.homework.DetailActivity"
            android:theme="@style/Theme.AppCompat.Light.DarkActionBar"
            android:label="@string/activity_detail"
            android:parentActivityName="com.wachid.homework.MainActivity" >
           
        </activity>
        
            <activity
            android:name="com.wachid.homework.HelpActivity"
            android:theme="@style/Theme.AppCompat.Light.DarkActionBar"
            android:label="@string/activity_help"
            android:parentActivityName="com.wachid.homework.MainActivity" >
           
        </activity>
    </application>

</manifest>
